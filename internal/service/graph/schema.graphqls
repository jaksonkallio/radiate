# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Origin {
	id: ID!
	index_cid: String!
	name: String!
	description: String!
}

type Media {
	id: ID!
	cid: String!
	file_type: String!
	caption: String!
	tags: [String!]!
	star: Boolean!
	pin: Boolean!
}

type Query {
  scan(origin_ids: [ID!], query: String!, only_starred: Boolean): [Media!]!
}