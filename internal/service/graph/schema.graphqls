# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Library {
	id: ID!
	name: String!
	description: String!
	motd: String
	ipns_id: String!
}

type Media {
	id: ID!
	ipfs_cid: String!
	extension: String!
	description: String!
	tags: [String!]!
	starred: Boolean!
	pinned: Boolean!
}

type Query {
  scan(origin_ids: [ID!], query: String!, only_starred: Boolean): [Media!]!
}